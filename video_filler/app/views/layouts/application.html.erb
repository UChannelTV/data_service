<!DOCTYPE html>
<html>
<head>
  <title>Data Service Admin</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag '//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css' %>
  <%= javascript_include_tag '//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js' %>

  <script>
    $(document).ready(function(){
      $('table.display_only').DataTable({
        "ordering": false,
        "bFilter": false,
        "bPaginate": false,
        "bInfo": false
      });

      $('table.data_full').DataTable({
        "order": []
      });
    })
  </script>
  
  <% if content_for? :for_head %>
    <%= yield :for_head %>
  <% end %>
</head>
<body>
<div style="background:#F8F8FF" class="navbar-class">
  <table cellspacing='5'>
   <tr>
    <td style="padding-right: 20px"><%=link_to_unless_current "LIST", {controller: "filler_video", action: "index"} %></td>
    <td style="padding-right: 20px"><%=link_to_unless_current "NEW", {controller: "filler_video", action: "new"} %></td>
    <td><%=link_to_unless_current "SEARCH", {controller: "filler_video", action: "match_search"} %></td>
   </tr>
  </table>
</div>

<%= yield %>

</body>
</html>
