<h2>Vimeo Video</h2>

<p id="notice"><%= notice %></p>

<% if ! @record.nil? %>
  <table id='video_info' class="display display_only">
    <thead>
      <tr>
        <th align="left">Field</th>
        <th align="left">Value</th>
      </tr>
    </thead>

    <tbody>
      <tr><td>Vimeo ID</td><td><%= link_to @record["vimeo_id"], "https://vimeo.com/channels/#{@record["channel_id"]}/#{@record["vimeo_id"]}", target: "_blank" %></td></tr>
      <tr><td>Duration</td><td><%= @record["duration"] %></td></tr>
      <tr><td>Width</td><td><%= @record["width"] %></td></tr>
      <tr><td>Height</td><td><%= @record["height"] %></td></tr>
      <tr><td>Published At</td><td><%= @record["published_at"] %></td></tr>
      <tr><td>Title</td><td><%= @record["title"] %></td></tr>
      <tr><td>Description</td>
        <td>
          <% @record["description"].split("\n").each do |line| %>
          <%= line %><br/>
          <% end %>
        </td>
      </tr>
      <tr><td>Tags</td><td><%= @record["tags"] %></td></tr>
      <tr><td>Channel ID</td><td><%= @record["category_id"] %></td></tr>
      <tr><td>Association</td><td><%= link_to 'View', video_upload_admin_index_path("host" => "vimeo", "host_id" => @record["vimeo_id"]) %></td></tr>
      <tr><td>Embed Privacy</td><td><%= @record["embed_privacy"] %></td></tr>
      <tr><td>Expired</td><td><%= @record["expired"] %></td></tr>
      <tr><td>Thumbnail Small</td><td><%= image_tag(@record["thumbnail_small"]) %></td></tr>
      <tr><td>Thumbnail Medium</td><td><%= image_tag(@record["thumbnail_medium"]) %></td></tr>
      <tr><td>Thumbnail Large</td><td><%= image_tag(@record["thumbnail_large"]) %></td></tr>
    </tbody>
  </table>

  <br/>

  <%= link_to 'Edit', action: 'edit', id: @record["vimeo_id"] %>&nbsp;|&nbsp;<%= link_to 'Add to UChannel', controller: 'video_admin', action: 'new', source: 'vimeo', source_id: @record["vimeo_id"] %>
<% end %>  
