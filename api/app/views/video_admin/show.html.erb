<h2>UChannel Video</h2>

<p id="notice"><%= notice %></p>

<% if ! @record.nil? %>
  <table id='video_info' class="display display_only">
    <thead>
      <tr>
        <th align="left">Field</th>
        <th align="left">Value</th>
      </tr>
    </thead>

    <tbody>
      <tr><td>ID</td><td><%= @record["id"] %></td></tr>
      <tr><td>Duration</td><td><%= @record["duration"] %></td></tr>
      <tr><td>Title</td><td><%= @record["title"] %></td></tr>
      <tr><td>Description</td>
        <td>
          <% @record["description"].split("\n").each do |line| %>
          <%= line %><br/>
          <% end %>
        </td>
      </tr>
      <tr><td>Tags</td><td><%= @record["tags"] %></td></tr>
      <tr><td>Category</td><td><%= @record["category"] %></td></tr>
      <tr><td>Status</td><td><%= @record["status"] %></td></tr>
      <tr><td>Parent Video</td><td><%= @record["parent_video"] %></td></tr>
      <tr><td>Uploads</td><td><%= link_to "View All", {controller: 'video_upload_admin', action: 'index', video_id: @record["id"]} %></td></tr>
      <tr><td>Other</td><td><%= @record["other"] %></td></tr>
    </tbody>
  </table>
  <br/>

  <%= link_to 'Edit', action: 'edit', id: @record["id"] %>
<% end %>  
